{
    "name": "frigg-app-back-end",
    "prettier": "@friggframework/prettier-config",
    "private": true,
    "scripts": {
        "test": "jest --group=-interactive --group=-live-api",
        "test:full": "jest",
        "test:process": "jest --testPathPattern process-tests process.test",
        "debug": "jest --testTimeout 0",
        "ci": "npm install",
        "lint": "eslint .",
        "lint:fix": "prettier --write --loglevel error . && eslint . --fix",
        "lint:cloudformation": "sls package --stage dev && cfn-lint .serverless/cloudformation-template-*.json",
        "lint:markdown": "markdownlint --fix .",
        "backend-start": "sls offline --stage dev",
        "backend-start:staging": "sls offline --stage staging",
        "docker:start": "docker compose up -d",
        "docker:stop": "docker compose down",
        "knip": "knip"
    },
    "dependencies": {
        "@friggframework/api-module-hubspot": "^1.1.7",
        "@friggframework/core": "^1.2.2",
        "@hapi/boom": "^7.4.11",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "express": "^4.19.2",
        "express-async-handler": "^1.2.0",
        "lodash": "^4.17.21",
        "serverless-http": "^2.7.0"
    },
    "devDependencies": {
        "@friggframework/devtools": "^1.2.0",
        "@friggframework/eslint-config": "^1.2.0",
        "@friggframework/prettier-config": "^1.2.0",
        "@types/node": "^22.1.0",
        "chai": "^4.5.0",
        "chai-http": "^4.4.0",
        "copy-webpack-plugin": "^10.2.4",
        "dotenv": "^16.4.5",
        "jest": "^29.7.0",
        "knip": "^5.27.1",
        "markdownlint-cli": "^0.41.0",
        "prettier": "^2.8.8",
        "serverless": "^3.39.0",
        "serverless-webpack": "^5.14.1",
        "serverless-offline": "^13.6.0",
        "typescript": "^5.5.4",
        "webpack": "^5.93.0"
    }
}
