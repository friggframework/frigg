{
  "name": "@friggframework/integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for Frigg CLI and Management UI",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:integration": "jest cli-gui-integration.test.js",
    "test:performance": "jest performance.test.js",
    "test:rfc": "jest rfc-validation.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 60000,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "../**/*.js",
      "!../node_modules/**",
      "!**/node_modules/**",
      "!**/*.test.js"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage"
  }
}