{
  "name": "@friggframework/ui-core",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/**"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./api": {
      "import": "./dist/api/index.js",
      "types": "./dist/api/index.d.ts"
    },
    "./state": {
      "import": "./dist/state/index.js",
      "types": "./dist/state/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./models": {
      "import": "./dist/models/index.js",
      "types": "./dist/models/index.d.ts"
    },
    "./services": {
      "import": "./dist/services/index.js",
      "types": "./dist/services/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "types": "./dist/plugins/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "build:analyze": "ANALYZE=true vite build && tsc --emitDeclarationOnly",
    "lint": "eslint . --ext js,ts --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "query-string": "^9.1.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.3.4",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.57.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "terser": "^5.31.0"
  },
  "description": "Framework-agnostic UI core utilities and business logic for Frigg integration platform",
  "keywords": [
    "frigg",
    "ui-core",
    "framework-agnostic",
    "utilities",
    "integration"
  ],
  "author": "Frigg Framework",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/friggframework/frigg.git",
    "directory": "packages/ui-core"
  }
}